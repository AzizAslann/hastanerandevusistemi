@model hastanerandevusistemi.Models.RandevuAl

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .button {
        background-color: rgba(255, 255, 255, .1);
        color: #fff;
        border: none;
        padding: 10px 20px;
        margin: 10px;
        border-radius: 10px;
        font-size: 18px;
        cursor: pointer;
        text-align: center;
    }
</style>
<body style="margin-top:125px;">
    <h3 style="color:white;">@localizer["soru"]</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2" style="color:white;">
                @localizer["klinik"]
            </dt>
            <dd class="col-sm-10" style="color:white;">
                @Html.DisplayFor(model => model.randklinik)
            </dd>
            <dt class="col-sm-2" style="color:white;">
                @localizer["doc"]
            </dt>
            <dd class="col-sm-10" style="color:white;">
                @Html.DisplayFor(model => model.randhekim)
            </dd>
            <dt class="col-sm-2" style="color:white;">
                @localizer["date"]
            </dt>
            <dd class="col-sm-10" style="color:white;">
                @Html.DisplayFor(model => model.randtarih)
            </dd>
            <dt class="col-sm-2" style="color:white;">
                @localizer["saat"]
            </dt>
            <dd class="col-sm-10" style="color:white;">
                @Html.DisplayFor(model => model.randsaat)
            </dd>
            <dt class = "col-sm-2" style="color:white;">
            @localizer["sahip"]
            </dt>
            <dd class = "col-sm-10" style="color:white;">
            @Html.DisplayFor(model => model.randsahip)
            </dd> 
        </dl>

        <form asp-action="Delete2">
            <input type="hidden" asp-for="randID" />
            <input type="submit" value="@localizer["iptal"]" class="button" /><a style="color:white;">|</a>
            <button class="button" onclick="window.location.href='/RandevuAl/Index1'" asp-action="Index1">@localizer["geri"]</button>
        </form>
    </div>
</body>