@model hastanerandevusistemi.Models.DTO.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
        <meta name="viewport" content="width=device-width" />
        <title>Giriş Ekranı</title>
        <link rel="stylesheet" href="/css/style.css">
        <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    </head>

    <body>
        <div class="wrapper">
            <form asp-action="Login" method="post">
                <h1>Giriş Yap</h1>

                <div class="input-box">
                    <input type="text" asp-for="Username" placeholder="Kullanıcı Adı" required>
                <i class='bx bxs-user'></i>
                </div>
                <div class="msg">
                    <span class="err" asp-validation-for="Username"></span>
                </div>


                <div class="input-box">
                    <input type="password" asp-for="Password" placeholder="Şifre" required>
                <i class='bx bxs-lock-alt'></i>
                </div>
                <div class="msg">
                    <span class="err" asp-validation-for="Password"></span>
                </div>

              @*   <div class="remember-forgot">
                    <label><input type="checkbox">Hatırla Beni!</label>
                    <a href="#">Şifremi Unuttum!</a>
                </div> *@

                @if (TempData["msg"] != null)
                {
                  <div class="msg">
                    <span class="err">@TempData["msg"]</span>
                  </div>
                }

                <button type="submit" class="btn">Giriş Yap</button>

                <div class="register-link">
                <p>Hesabınız yok mu?<a href="/UserAuthentication/Registration"> Kayıt Ol</a></p>
                </div>
            </form>
        </div>

    </body>
</html>


