            @Html.DisplayNameFor(model => model.randsahip)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.randsahip)
        </dd> *@
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="randID" />
