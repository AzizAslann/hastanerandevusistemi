@model hastanerandevusistemi.Models.Randevular

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .button {
        background-color: rgba(255, 255, 255, .1);
        color: #fff;
        border: none;
        padding: 10px 20px;
        margin: 10px;
        border-radius: 10px;
        font-size: 18px;
        cursor: pointer;
        text-align: center;
    }
</style>
<body style="margin-top:125px;">
<h3 style="color:white;">Bu randevuyu iptal etmek istediğinize emin misiniz?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2" style="color:white;">
            Klinik
        </dt>
        <dd class = "col-sm-10" style="color:white;">
            @Html.DisplayFor(model => model.randklinik)
        </dd>
        <dt class = "col-sm-2" style="color:white;">
            Doktor
        </dt>
        <dd class = "col-sm-10" style="color:white;">
            @Html.DisplayFor(model => model.randhekim)
        </dd>
        <dt class = "col-sm-2" style="color:white;">
            Tarih
        </dt>
        <dd class = "col-sm-10" style="color:white;">
            @Html.DisplayFor(model => model.randtarih)
        </dd>
