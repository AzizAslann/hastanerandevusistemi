@model IEnumerable<hastanerandevusistemi.Models.Doktorlar>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<style>
    .white-text {
        color: white;
    }

    .button {
        background-color: rgba(255, 255, 255, .1);
        color: #fff;
        border: none;
        padding: 5px 10px;
        margin: 5px;
        border-radius: 5px;
        font-size: 14px;
        cursor: pointer;
        text-align: center;
    }
</style>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Doktorlar</title>
</head>
<body style="margin-top:125px;">
<p>
    <a class="button" style="color:white;" asp-action="Create">Doktor Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th style="color:white;">
                Doktor Klinik
            </th>
                <th style="color:white;">
                Doktor İsim
            </th>
                <th style="color:white;">
                Doktor Durum
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="white-text">
                @Html.DisplayFor(modelItem => item.klinik)
            </td>
            <td class="white-text">
                @Html.DisplayFor(modelItem => item.isim)
            </td>
            <td class="white-text">
                @Html.DisplayFor(modelItem => item.durum)
            </td>   
            <td>
               <a class="button" asp-action="Edit" asp-route-id="@item.DoktorID" style="color:white;">Düzenle</a> <a style="color:white;">|</a>
               <a class="button" asp-action="Details" asp-route-id="@item.DoktorID" style="color:white;">İncele</a> <a style="color:white;">|</a>
               <a class="button" asp-action="Delete" asp-route-id="@item.DoktorID" style="color:white;">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
