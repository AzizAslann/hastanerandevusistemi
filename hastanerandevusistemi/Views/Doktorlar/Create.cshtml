@model hastanerandevusistemi.Models.Doktorlar

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<style>
    .button {
        background-color: rgba(255, 255, 255, .1);
        color: #fff;
        border: none;
        padding: 10px 20px;
        margin: 10px;
        border-radius: 10px;
        font-size: 18px;
        cursor: pointer;
        text-align: center;
    }
</style>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Yeni Doktor Ekle</title>
</head>
<body style="margin-top:125px;">
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"></label>
                <input placeholder="Doktor Klinik" asp-for="klinik" class="form-control" />
                <span asp-validation-for="klinik" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <input placeholder="Doktor Ad Soyad" asp-for="isim" class="form-control" />
                <span asp-validation-for="isim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <input placeholder="Doktor Durum" asp-for="durum" class="form-control" />
                <span asp-validation-for="durum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Doktoru Ekle" class="button" /> <a style="color:white;">|</a>
                <buton class="button" onclick="window.location.href='/Doktorlar/Index'">Listeye Geri Dön</buton>
            </div>
        </form>
    </div>
</div>

</body>
</html>
