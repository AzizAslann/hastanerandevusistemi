@model hastanerandevusistemi.Models.Doktorlar

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<style>
    .button {
        background-color: rgba(255, 255, 255, .1);
        color: #fff;
        border: none;
        padding: 10px 20px;
        margin: 10px;
        border-radius: 10px;
        font-size: 18px;
        cursor: pointer;
        text-align: center;
    }
</style>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Doktor Detay</title>
</head>
<body style="margin-top:125px;">

<div>
        <h4 style="color:white;">Doktorlar</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2" style="color:white;">
            Doktor Klinik
        </dt>
        <dd class = "col-sm-10" style="color:white;">
            @Html.DisplayFor(model => model.klinik)
        </dd>
        <dt class = "col-sm-2" style="color:white;">
            Doktor İsmi
        </dt>
        <dd class = "col-sm-10" style="color:white">
            @Html.DisplayFor(model => model.isim)
        </dd>
        <dt class = "col-sm-2" style="color:white;">
           Doktur Durum
        </dt>
        <dd class = "col-sm-10" style="color:white;">
            @Html.DisplayFor(model => model.durum)
        </dd>
    </dl>
</div>
<div>
    <a class="button" style="color:white;" asp-action="Edit" asp-route-id="@Model?.DoktorID">Doktoru Bilgileri Güncelle</a> <a style="color:white;">|</a>
    <button class="button" onclick="window.location.href='/Doktorlar/Index'">Listeye Geri Dön</button>
</div>
</body>
</html>
