@model hastanerandevusistemi.Models.HastaneClass

@{
    ViewData["Title"] = "Hastane Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Hastane Ekle</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="hastil" class="control-label">İl</label>
                <input asp-for="hastil" class="form-control" placeholder="İl" />
                <span asp-validation-for="hastil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="hastilce" class="control-label">İlçe</label>
                <input asp-for="hastilce" class="form-control" placeholder="İlçe" />
                <span asp-validation-for="hastilce" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="hastisim" class="control-label">Hastane İsmi</label>
                <input asp-for="hastisim" class="form-control" placeholder="Hastane İsmi" />
                <span asp-validation-for="hastisim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input onclick="msj()" type="submit" asp-action="Create" value="Ekle" class="btn btn-primary" />
                <a class="btn btn-success" asp-action="Hastaneler" role="button">Geri Dön</a>
            </div>
            <script>
                function msj() {
                    alert("Hastane başarıyla eklendi.");
                }
            </script>
        </form>
    </div>
</div>


