@model hastanerandevusistemi.Models.HastaneClass

@{
    ViewData["Title"] = "İncele";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Hastane Bilgileri</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            İl
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.hastil)
        </dd>
        <dt class = "col-sm-2">
            İlçe
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.hastilce)
        </dd>
        <dt class = "col-sm-2">
            Hastane İsmi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.hastisim)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.hastid">Düzenle</a>
    <a class="btn btn-success" asp-action="Hastaneler" role="button">Geri Dön</a>
</div>
